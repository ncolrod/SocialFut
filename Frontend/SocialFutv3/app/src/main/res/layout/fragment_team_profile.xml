<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".api.fragments.TeamProfileFragment">

    <ImageView
        android:id="@+id/teamLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/teamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Equipo"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/teamLogo"
        app:layout_constraintStart_toEndOf="@+id/teamLogo"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/teamLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicación del Equipo"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/teamName"
        app:layout_constraintStart_toEndOf="@+id/teamLogo"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/teamStadium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Estadio"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/teamLocation"
        app:layout_constraintStart_toEndOf="@+id/teamLogo"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/teamCaptain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Capitán"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/teamStadium"
        app:layout_constraintStart_toEndOf="@+id/teamLogo"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/teamPlayersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugadores del Equipo:"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/teamCaptain"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/teamPlayersRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/teamPlayersLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
